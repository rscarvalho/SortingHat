<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Hogwarts" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/houseGryffindorColorDark</item>
        <item name="colorAccent">@color/houseRavenclawColorDark</item>
        <item name="colorPrimaryDark">@color/houseSlytheringColorDark</item>
        <item name="android:colorForeground">@color/houseSlytheringColorLight</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:buttonStyle">@style/AppTheme.Hogwarts.Button</item>
    </style>

    <style name="AppTheme.Hogwarts.Button" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">?android:attr/colorAccent</item>
        <item name="android:textColor">@color/houseSlytheringColorLight</item>
    </style>
</resources>