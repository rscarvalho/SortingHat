<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:theme="@style/AppTheme.Hogwarts"
    tools:context=".HouseChooserFragment">
    <ImageView
        android:contentDescription="@string/sorting_hat_description"
        android:src="@drawable/crest_hogwarts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crest_image"/>

    <TextView
        android:text="@string/house_name_default"
        android:id="@+id/house_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <Button
        android:text="@string/sort_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sort_button"/>
</LinearLayout>