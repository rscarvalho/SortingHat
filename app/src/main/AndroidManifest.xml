<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.rscarvalho.sortinghat"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Hogwarts">
        <activity
            android:name="io.github.rscarvalho.sortinghat.HouseChooserActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.rscarvalho.sortinghat.SpotsSelectionActivity"/>
        </activity>
        <activity
            android:name="io.github.rscarvalho.sortinghat.SpotsSelectionActivity"
            android:label="@string/title_activity_spots_selection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Hogwarts">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
